@page "/Grid"
@using BlazorApp.Shared
@using BlazorApp.Shared.Comparers
@using BlazorApp.Client.Services
@using Microsoft.FluentUI.AspNetCore.Components

@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject NavigationManager Navigation
@inject NotificationService NotificationService

<PageTitle>Grid</PageTitle>

@code {
    DateTime utcNow = DateTime.UtcNow;

    private List<TrackedItem> items = [];

    protected override async Task OnInitializedAsync()
    {
        var keys = (await localStorage.KeysAsync()).Where(a => a.StartsWith(nameof(TrackedItem)));

        foreach (var key in keys)
        {
            var item = await localStorage.GetItemAsync<TrackedItem>(key);
            if (item != null)
                items.Add(item);
        }

        items.Sort(new TrackedItemComparerDescending());
    }
}

@if (items.Any())
{
    <FluentDataGrid Items="@items.AsQueryable()">
        <PropertyColumn Property="@(p => p.Name)" Sortable="true" />
        <TemplateColumn Title="Last Tracked">
            @if (context.PastOccurrences.Any())
            {
                var max = context.PastOccurrences.Select(a => a.ActualTimestamp).Max().ToLocalTime();
                @max.ToRelativeDateString()
            }
        </TemplateColumn>
        <TemplateColumn Title="Next Due">
            @if (context.Targets.Any())
            {
                @context.GetFutureOccurrences(utcNow, 1).FirstOrDefault(utcNow).ToLocalTime().ToRelativeDateString(utcNow.ToLocalTime());
            }
        </TemplateColumn>
        <TemplateColumn>
            <button class="btn btn-success" @onclick="@(() => OnClickTrack(context))">Track</button>
        </TemplateColumn>
    </FluentDataGrid>
}
else
{
    <p>No items currently tracked. Click the button below to add a new item.</p>
}

<p>
    <button class="btn btn-primary" @onclick="AddItem">Add New</button>
    <BlazorApp.Client.Components.Export />
    <a href="/import" class="btn btn-success">Import Data</a>
</p>

<p>
    <a href="/">View Cards</a>
</p>

@code {
    async void OnClickTrack(TrackedItem trackedItem)
    {
        trackedItem.AddOccurrence(DateTime.UtcNow);
        await localStorage.SetItemAsync(nameof(TrackedItem) + trackedItem.Id, trackedItem);
        
        // Schedule notification for the next interval if the item has targets with intervals
        await ScheduleNextNotification(trackedItem);
    }

    private async Task ScheduleNextNotification(TrackedItem item)
    {
        // Check if notifications are supported and we have permission
        if (!await NotificationService.IsSupportedAsync())
            return;

        var permission = await NotificationService.GetPermissionAsync();
        if (permission == "default")
        {
            // Request permission
            permission = await NotificationService.RequestPermissionAsync();
        }

        if (permission != "granted")
            return;

        // Cancel any existing notification for this item
        await NotificationService.CancelNotificationAsync(item.Name);

        // Check if this item has intervals set
        var eligibleTargets = item.Targets.Where(t => t.Qty > 0 && t.Frequency > TimeSpan.Zero).ToList();
        if (!eligibleTargets.Any())
            return;

        // Calculate the next occurrence time
        var nextOccurrence = item.GetFutureOccurrences(DateTime.UtcNow, 1).FirstOrDefault();
        if (nextOccurrence == default(DateTime))
            return;

        // Calculate the interval in hours for the notification
        var now = DateTime.UtcNow;
        var interval = (nextOccurrence - now).TotalHours;

        if (interval > 0)
        {
            await NotificationService.ScheduleNotificationAsync(item.Name, interval);
        }
    }

    private void AddItem()
    {
        Navigation.NavigateTo("/edit/" + Guid.NewGuid());
    }
}